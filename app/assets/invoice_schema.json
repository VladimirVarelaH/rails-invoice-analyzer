{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Invoice Schema",
  "type": "object",
  "required": [
    "billed_at",
    "category_id",
    "issuer",
    "category",
    "invoice_items",
    "city_name",
    "address",
    "issuer_tax_id"
  ],
  "properties": {
    "billed_at": {
      "type": "string",
      "format": "date-time"
    },
    "category_id": {
      "type": "number"
    },
    "issuer": {
      "type": "string"
    },
    "city_name": {
      "type": "string"
    },
    "address": {
      "type": "string"
    },
    "issuer_tax_id": {
      "type": "string"
    },

    "category": {
      "type": "object",
      "required": ["id", "name"],
      "properties": {
        "id": { "type": "number" },
        "name": { "type": "string" }
      }
    },
    "invoice_items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "invoice_id",
          "qtty",
          "price",
          "name"
        ],
        "properties": {
          "invoice_id": { "type": "number" },
          "qtty": { "type": "number" },
          "price": {
            "type": "string",
            "pattern": "^[0-9]+(\\.[0-9]+)?$"
          },
          "name": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
